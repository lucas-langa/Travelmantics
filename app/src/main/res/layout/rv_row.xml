<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android2="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android2:layout_width="match_parent"
	android2:layout_height="match_parent">


	<ImageView
		android2:id="@+id/imageDeal"
		android2:layout_width="107dp"
		android2:layout_height="125dp"
		android2:layout_marginStart="8dp"
		android2:layout_marginTop="8dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/ic_launcher" />

	<TextView
		android2:id="@+id/tvTitle"
		android2:layout_width="wrap_content"
		android2:layout_height="wrap_content"
		android2:layout_marginStart="@dimen/text_margin_standard"
		android2:layout_marginTop="@dimen/text_margin_standard"
		android2:textSize="@dimen/title_large"
		app:layout_constraintStart_toEndOf="@+id/imageDeal"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android2:id="@+id/tvPrice"
		android2:layout_width="wrap_content"
		android2:layout_height="wrap_content"
		android2:layout_marginStart="@dimen/text_margin_standard"
		android2:layout_marginTop="@dimen/text_margin_standard"
		app:layout_constraintStart_toEndOf="@+id/imageDeal"
		app:layout_constraintTop_toBottomOf="@+id/tvTitle"
		android2:textSize="@dimen/text_price"
		android2:textColor="@color/colorAccent"
		/>

	<TextView
		android2:id="@+id/tvDescription"
		android2:layout_width="wrap_content"
		android2:layout_height="wrap_content"
		android2:layout_marginStart="@dimen/text_margin_standard"
		android2:layout_marginTop="@dimen/text_margin_standard"
		app:layout_constraintStart_toEndOf="@+id/imageDeal"
		app:layout_constraintTop_toBottomOf="@+id/tvPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>

